	cout << "Number of tickets for General Admission" << endl;
	cin >> d;

	cout << " " << endl;

	cout << "Total Amount of Box Tickets sold = "<< box * a << endl;
	cout << "Total Amount of Sideline Tickets sold = " << sl * b << endl;
	cout << "Total Amount of Premium Tickets sold = " << prm * c << endl;
	cout << "Total Amount of General Admission Tickets sold = " << GA * d<< endl;
	cout << "Total number of tickets sold = " << a + b + c + d << endl;
	cout << "Total Amount of tickets sold = "<< (a * box) + (b * sl) + (c * prm) + (d * GA) << endl;
	cout << " "<< endl;
	
