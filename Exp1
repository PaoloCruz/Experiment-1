#include <iostream>
#include <conio.h>
#include <string>
#include <iomanip>

using namespace std;

int main()

{
	int box, sl, prm, GA; 
	box = 250;
	sl = 100;
	prm = 50;
	GA = 25;
	int a, b, c, d;
	int a2, b2, c2, d2;
	int a3, b3, c3, d3;
	int a4, b4, c4, d4;

	


	cout << "Ticket Price" << endl;
	cout << "box = " << box << endl;
	cout << "sl = " << sl << endl;
	cout << "prm = " << prm << endl;
	cout << "GA = " << GA << endl;
