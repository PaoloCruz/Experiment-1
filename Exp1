	cout << "Total Amount of General Admission Tickets sold = " << GA * d3<< endl;
	cout << "Total number of tickets sold = " << a3 + b3 + c3 + d3<< endl;
	cout << "Total Price = "<< (a3 * box) + (b3 * sl) + (c3 * prm) + (d3 * GA) << endl;
	cout << " " << endl;

		cout << "Tickets for Game 4" << endl;
