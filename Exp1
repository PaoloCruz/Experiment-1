	cout << "Total Amount of Premium Tickets sold = " << prm * c2 << endl;
	cout << "Total Amount of General Admission Tickets sold = " << GA * d2<< endl;
	cout << "Total number of tickets sold = " << a2 + b2 + c2 + d2<< endl;
	cout << "Total Amount of tickets sold = "<< (a2 * box) + (b2 * sl) + (c2 * prm) + (d2 * GA) << endl;

	cout << " " << endl;

		cout << "Tickets for Game 3" << endl;
	cout << "Number of tickets for box" << endl;
